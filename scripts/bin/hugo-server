#!/bin/bash

ip0() {
	if [[ "$OSTYPE" == "darwin"* ]]; then
	        if=$(route -n get 8.8.8.8|grep interface| awk '{print $2}')
        	ifconfig $if|grep inet|grep netmask|awk '{print $2}'
	else
        	ip route get 8.8.8.8 | head -1 | awk '{print $7}'
	fi
}

hugo -b http://$(ip0) server --bind $(ip0)

